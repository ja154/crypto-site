# Example environment variables for FYNOR clone backend
# Copy to backend/.env and fill with real values

# PostgreSQL connection string
DATABASE_URL=postgresql://postgres:password@localhost:5432/fynor_clone

# Server port
PORT=3000

# Frontend URL (for CORS and OAuth redirect)
FRONTEND_URL=http://localhost:8080

# JWT and session secrets
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRES_IN=7d
SESSION_SECRET=your_session_secret_here

# Google OAuth (create credentials in Google Cloud Console)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_CALLBACK_URL=http://localhost:3000/auth/google/callback

# Node environment
NODE_ENV=development
