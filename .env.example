# FYNOR Clone Environment Variables
# Copy this file to .env and fill in the values

# Server Configuration
PORT=3000
NODE_ENV=development

# Database Configuration
# For local development: postgresql://postgres:postgres@localhost:5432/fynor_clone
# For Railway: Will be provided as DATABASE_URL environment variable
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/fynor_clone

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_change_this_in_production
JWT_EXPIRES_IN=7d

# Session Configuration
SESSION_SECRET=your_session_secret_key_change_this_in_production

# Frontend Configuration
# Local development: http://localhost:8080 (if running frontend separately)
# Production: https://your-domain.com (will be the Railway app domain)
FRONTEND_URL=http://localhost:3000

# Google OAuth Configuration (Optional, set to empty if not using OAuth)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_CALLBACK_URL=http://localhost:3000/auth/google/callback
